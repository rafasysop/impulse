generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         String @id @default(uuid())
  github_id  Int
  login      String
  name       String
  avatar_url String

  messages Message[]
  @@map("users")
}

model Message {
  id   String @id @default(uuid())
  text String

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  created_at DateTime @default(now())

  @@map("messages")
}
